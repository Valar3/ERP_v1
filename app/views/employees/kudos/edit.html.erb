<h1>Edit a Kudo</h1>

<%= form_with(model: [:employees, @kudo])do |f| %>
  <%if @kudo && if @kudo.errors.any?  %>
    <div id="error_explanation">
      <h2>Errors that prohibited this @kudo from being saved:</h2>

      <ul>
        <% @kudo.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
        <% end %>

      <%end%>
  <p>
    <%= f.label :title %><br/>
    <%= f.text_field :title %>
  </p>
  <p>
    <%= f.label :content %><br/>
    <%= f.text_area :content %>
  </p>
  <p>

    <%=f.label :receiver %><br/>
    <%=f.collection_select :receiver_id, Employee.all, :id , :email %>
  </p>
   <p>
    <%=f.label :company_value %><br/>
    <%=f.collection_select :company_value_id, CompanyValue.all, :id , :title %>
  </p>
  <p>
    <%= f.submit %>
  </p>

<% end %>
