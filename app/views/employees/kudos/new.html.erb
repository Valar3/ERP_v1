<h1>Create a new Kudo</h1>

<% if @kudo.errors.any?%>
    <h2>The following errors prevented the Kudo from being saved</h2>
    <ul>
        <% @kudo.errors.full_messages.each do |message| %>
            <li><%= message %></li>
        <% end %>
    </ul>
<% end %>
<%= form_with(model: [:employees, @kudo]) do |f| %>


  <p>
    <%= f.label :title %><br/>
    <%= f.text_field :title %>
  </p>
  <p>
    <%= f.label :content %><br/>
    <%= f.text_area :content %>
  </p>
  <p>
    <%=f.label :receiver %><br/>
    <%=f.collection_select :receiver_id, Employee.all, :id , :email %>
  </p>
  <p>
    <%=f.label :company_value %><br/>
    <%=f.collection_select :company_value_id, CompanyValue.all, :id , :title %>
  </p>
  <p>
    <%= f.submit %>
  </p>

<% end %>
