<h1>Employees listing page</h1>
<table>
  <thead>
    <tr>
      <th>Employee name</th>
      <th>Employee surname</th>
      <th>Employee email</th>
      <th>No of avail. kudos</th>
      <th>Update employee profile</th>
      <th>Delete employee profile</th>
      <th>Show employee reward list</th>
   </tr>
  </thead>

  <tbody>
    <% @employees.each do |employee| %>
      <tr>
        <td><%= employee.name %></td>
        <td><%= employee.surname %></td>
        <td><%= employee.email %></td>
        <td><%= employee.number_of_available_kudos %></td>
      <td><%=link_to 'Update profile', edit_admins_employee_path(employee), method: :get %></td>
      <td><%=link_to 'Delete profile', admins_employee_path(employee), method: :delete, data: {confirm: "Are you sure?"}%></td>
      <td><%=link_to 'Show list of orders', admins_employees_orders_path(employee) %></td>
<% end %>
  </tbody>
</table>
<%= button_to 'Back to admins panel', admin_root_path, method: :get%>
