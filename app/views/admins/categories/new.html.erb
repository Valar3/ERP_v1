<h1>Create a new Category</h1>

<% if category.errors.any?%>
    <h2>The following errors prevented the Category from being saved</h2>
    <ul>
        <% category.errors.full_messages.each do |message| %>
            <li><%= message %></li>
        <% end %>
    </ul>
<% end %>
<%= form_with(model: [:admins, category]) do |f| %>

  <p>
    <%= f.label :title %><br/>
    <%= f.text_field :title %>
  </p>
  <p>
    <%= f.submit %>
  </p>

<% end %>
